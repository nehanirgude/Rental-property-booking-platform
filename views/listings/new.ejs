<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>create new listing</h3>
    
    <form method="POST" action="listings" >
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Add a cachy title" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea  name="listing[description]" placeholder="enter description" type="text" class="form-control" ></textarea>
        </div>
       
       <div class="mb-3">
        <label for="image" class="form-label">image link</label>
        <input name="listing[image]" placeholder="enter image link/url" class="form-control">
       </div>
       
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">price</label>
                <input name="listing[price]" placeholder="2000" type="number" class="form-control">
    
            </div>
                
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">country</label>
                <input name="listing[country]" placeholder="india" type="text" class="form-control">
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">location</label>
            <input name="listing[location]" placeholder="add location" type="text" class="form-control">
        </div>
       
        <button class="btn btn-dark mb-3 btn-dark mt-3">add</button>
    </form>
</div>
</div>
</body>
