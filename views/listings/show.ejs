<% layout("/layouts/boilerplate")%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3 class="listing_details offset-3">Listing details</h3>
    <div class="card show-card">
      <div class="card col-6 offset-3 " style="width: 18rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing_image">
        <div class="card-body">
          <p class="card-text">
            <b><%=listing.title %></b><br>
            <%=listing.description %> <br>
            &#8377;<%=listing.price%><br>
            <%=listing.location %><br>
            <%=listing.country %><br>
          </p>
        </div>
      </div>
    </div>
    <br>
    
</div>

</div>
<div class="btns">
  <a href="/listings/<%= listing._id %>/edit " class="btn btn-dark col-1 offset-4 edit-btn"> Edit</a>

  <form method="POST" action="/listings/<%=listing._id %>?_method=DELETE">
    <button class="btn btn-dark offset-6">Delete</button>
  </form>
</div>
</div>


    
</body>
